li.vote-item
	.vote-title
		h2= val.aspect.toUpperCase()
	.vote-img(class= val.hasVote==null? '':'is-show')
		a.vote-left(vote-cop='0', vote-aspect= val.aspect, class= val.hasVote==0? 'is-selected': '')
			h3= val.competitors[0]
			img(src= '/images/demo/vote_'+val.aspect+'_1.jpg')
			div.vote-result= val.vote[0]
		a.vote-right(vote-cop='1', vote-aspect= val.aspect, class= val.hasVote==1? 'is-selected': '')
			h3= val.competitors[1]
			img(src= '/images/demo/vote_'+val.aspect+'_2.jpg')
			div.vote-result= val.vote[1]